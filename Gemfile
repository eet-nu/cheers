source :rubygems

# Specify the project's dependencies in the gemspec:
gemspec

# Specifiy the development dependencies here:
group :development do
  gem 'rake'
  
  # Documentation:
  gem 'yard'
  
  # Testing libraries:
  gem 'rspec'
  
  # Colorful messages:
  gem 'rainbow'
  
  # Support for guard:
  gem 'guard'
  gem 'guard-bundler'
  gem 'guard-rspec'
  gem 'rb-fsevent'
  gem 'rb-readline'
  gem 'fuubar'
end
